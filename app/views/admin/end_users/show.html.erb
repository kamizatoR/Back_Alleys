<h3 class="text-center mt-4 mb-1 font-08"><%= @end_user.display_name %> さんの</h3>
<h3 class="text-center mb-md-4 mb-1 font-08">アカウント情報</h3>

<div class="container mt-md-5 mt-3">
  <% if @end_user.email != "guest@example.com"%>
    <div class="row mb-md-3 justify-content-center">
      <p class="col-md-3 col-6 mr-md-2">会員ID</p>
      <p class="col-md-4 col-6 mr-md-2 text-center">No.<%= @end_user.id %></p>
    </div>

    <div class="row mb-md-3 justify-content-center">
      <p class="col-md-3 col-12 mr-md-2">氏名</p>
      <p class="col-md-4 col-12 mr-md-2 text-center"><%= @end_user.first_name %>　<%= @end_user.last_name %></p>
    </div>

    <div class="row mb-md-3 justify-content-center">
      <p class="col-md-3 col-12 mr-md-2">フリガナ</p>
      <p class="col-md-4 col-12 mr-md-2 text-center"><%= @end_user.first_kana %>　<%= @end_user.last_kana %></p>
    </div>

    <div class="row mb-md-3 justify-content-center">
      <p class="col-md-3 col-12 mr-md-2">メールアドレス</p>
      <p class="col-md-4 col-12 mr-md-2 text-center"><%= @end_user.email %></p>
    </div>

    <div class="row mb-md-3 justify-content-center">
      <p class="col-md-3 col-8 mr-md-2">会員ステータス</p>
        <% if @end_user.is_deleted != true %>
          <p class="col-md-4 col-4 mr-md-2 text-success text-center"><strong>有効</strong></p>
        <% else %>
          <p class="col-md-4 col-4 mr-md-2 text-secondary text-center"><strong>退会</strong></p>
        <% end %>
    </div>

  <% else %>

    <div class="row mb-3 justify-content-center">
      <p class="col-3 mr-2">会員ID</p>
      <p class="col-4 mr-2 text-center">No.<%= @end_user.id %></p>
    </div>

    <div class="row mb-3 justify-content-center">
      <p class="col-3 mr-2">表示名</p>
      <p class="col-4 mr-2 text-center"><%= @end_user.display_name %></p>
    </div>

    <div class="row mb-3 justify-content-center">
      <p class="col-3 mr-2">会員ステータス</p>
      <p class="col-4 mr-2 text-success text-center"><strong>ゲスト会員</strong></p>
    </div>
  <% end %>

</div>

<div class="row mb-3 justify-content-center">
  <% if @end_user.is_deleted != true && @end_user.not_display_guest %>
    <%= link_to admin_account_suspension_path, class: "btn btn-outline-danger btn-small" do %>
      アカウントを停止する <i class="fas fa-solid fa-ban"></i>
    <% end %>
  <% end %>
</div>
