<!DOCTYPE html>
<html>
  <head>
    <title>Pets</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row d-flex my-2">

        <div class="col-8 mainbar">
          <%= yield %>
        </div>

        <div class="col-4 border-left">
          <div class="row mt-4 mb-3 mx-4 d-flex justify-content-center border bg-dark">
            <%= link_to  root_path, class: 'text-decoration-none text-light' do %>
              <h3><strong class="text-success">P</strong><small>ets</small> <i class="fas fa-solid fa-paw text-warning"></i></h3>
            <% end %>

          </div>
          <nav class="nav nav-bar flex-column">

            <% if end_user_signed_in? %>

              <ul class="navbar-nav mx-5 mt-4">
                <li class="nav-item my-2">
                  <%= link_to  root_path, class: 'btn btn-outline-dark nav-link' do %>
                    投稿一覧 <i class="fas fa-solid fa-paw"></i>
                  <% end %>
                </li>

                <li class="nav-item my-2">
                  <%= link_to  search_path, class: 'btn btn-outline-dark nav-link' do %>
                    検索 <i class="fas fa-solid fa-magnifying-glass"></i>
                  <% end %>
                </li>

                <li class="nav-item my-2">
                  <%= link_to "タイムライン", timeline_path(current_end_user.display_name), class: 'btn btn-outline-dark nav-link' %>
                </li>

                <li class="nav-item my-2">
                  <%= link_to  destroy_end_user_session_path, class: 'btn btn-outline-dark nav-link', method: :delete do %>
                    ログアウト  <i class="fas fa-solid fa-door-open"></i>
                  <% end %>
                </li>

                <li class="nav-item  mt-5">
                  <%= link_to  new_post_path(current_end_user.display_name), class: 'btn btn-outline-dark nav-link' do %>
                    投稿  <i class="fas fa-paper-plane"></i>
                  <% end %>
                </li>

                <li class="nav-item my-3">
                  <%= link_to  mypage_path(current_end_user.display_name), class: "text-decoration-none text-dark" do  %>
                    <% if current_end_user.get_image%>
                      <%= image_tag current_end_user.image, size: "40x40", class: "rounded" %>
                    <% end %>

                    <strong><%= current_end_user.display_name %></strong>
                  <% end %>
                </li>

                <li class="nav-item my-2">
                  <i class="fas fa-cat"></i>
                  <i class="fas fa-dog"></i>
                  <i class="fas fa-solid fa-paw"></i>
                  <i class="fas fa-comment"></i>
                  <i class="fas fa-solid fa-thumbs-up"></i>
                  <i class="fas fa-regular fa-thumbs-up"></i>
                  <i class="fas fa-solid fa-user-plus"></i>

                  <i class="fas fa-solid fa-reply"></i>
                  <i class="fas fa-solid fa-address-book"></i>
                  <i class="fas fa-solid fa-user-check"></i>
                  <i class="fas fa-solid fa-users"></i>
                  <i class="fas fa-solid fa-user-xmark"></i>
                  <i class="fas fa-solid fa-user-gear"></i>
                  <i class="fas fa-solid fa-crown"></i>
                  <i class="fas fa-solid fa-gear"></i>
                  <i class="fas fa-solid fa-user-minus"></i>
                  <i class="fas fa-solid fa-pen-to-square"></i>



                </li>
              </ul>

            <% elsif admin_signed_in? %>

              <ul class="navbar-nav">
                <li class="nav-item my-2">
                  <%= link_to  root_path, class: 'btn btn-outline-dark nav-link' do %>
                    投稿一覧 <i class="fas fa-solid fa-paw"></i>
                  <% end %>
                </li>
                <li class="nav-item my-2">
                  <%= link_to  search_path, class: 'btn btn-outline-dark nav-link' do %>
                    検索 <i class="fas fa-solid fa-magnifying-glass"></i>
                  <% end %>
                </li>
                <li class="nav-item my-2">
                  <%= link_to admin_end_users_path, class: 'btn btn-outline-dark nav-link' do %>
                    停止ユーザー <i class="fas fa-solid fa-user-xmark"></i>
                  <% end %>
                </li>
                <li class="nav-item my-2">
                  <%= link_to "ログアウト", destroy_end_user_session_path, class: 'btn btn-outline-dark nav-link', method: :delete %>
                </li>
              </ul>

            <% else %>

              <ul class="navbar-nav">
                <li class="nav-item my-2">
                  <%= link_to  root_path, class: 'btn btn-outline-dark nav-link' do %>
                    投稿一覧 <i class="fas fa-solid fa-paw"></i>
                  <% end %>
                </li>

                <li class="nav-item my-2">
                  <%= link_to new_end_user_session_path, class: 'btn btn-outline-dark nav-link' do %>
                    ログイン <i class="fas fa-solid fa-right-to-bracket"></i>
                  <% end %>
                </li>

                <li class="nav-item my-2">
                  <%= link_to new_end_user_registration_path, class: 'btn btn-outline-dark nav-link' do %>
                    新規登録 <i class="fas fa-solid fa-user-plus"></i>
                  <% end %>
                </li>
              </ul>
            <% end %>

          </nav>
        </div>

      </div>
    </div>

  </body>
</html>
