<!DOCTYPE html>
<html>
  <head>
    <title>Pets</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container main ">
      <div class="row d-flex my-2">

        <div class="col-8">
          <%= yield %>
        </div>


        <div class="col-4 border-left">
          <nav class="nav nav-bar flex-column justify-content-between">
            <% if end_user_signed_in? %>
              <ul class="navbar-nav">
                <li class="nav-item">投稿一覧</li>
                <li class="nav-item">タイムライン</li>

                <li class="nav-item">検索</li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_end_user_session_path, class: 'btn btn-outline-dark nav-link' %>
                </li>
              </ul>
            <% elsif admin_signed_in? %>
              <ul class="navbar-nav">
                <li class="nav-item ">検索</li>
                <li class="nav-item">停止ユーザー</li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_end_user_session_path, class: 'btn btn-outline-dark nav-link' %>
                </li>
              </ul>
            <% else %>
             <ul class="navbar-nav">
                <li class="nav-item btn btn-outline-dark nav-link">投稿一</li>
                <li class="nav-item">
                  <%= link_to "ログイン", new_end_user_session_path, class: 'btn btn-outline-dark nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to "新規登録", new_end_user_registration_path, class: 'btn btn-outline-dark nav-link' %>
                </li>
              </ul>
            <% end %>

          </nav>
        </div>

      </div>
    </div>

  </body>
</html>
