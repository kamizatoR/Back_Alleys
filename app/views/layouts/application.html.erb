<!DOCTYPE html>
<html>
  <head>
    <title>Pets</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row d-flex my-2">

        <div class="col-8 mainbar">
          <%= yield %>
        </div>


        <div class="col-4 border-left postion-relative">
          <nav class="nav nav-bar flex-column subbar">

            <% if end_user_signed_in? %>

              <ul class="navbar-nav mx-5 mt-4">
                <li class="nav-item my-2">
                  <%= link_to "投稿一覧", root_path, class: 'btn btn-outline-dark nav-link' %>
                </li>
                <li class="nav-item my-2">タイムライン</li>

                <li class="nav-item my-2">検索</li>
                <li class="nav-item my-2">
                  <%= link_to "ログアウト", destroy_end_user_session_path, class: 'btn btn-outline-dark nav-link', method: :delete %>
                </li>
              </ul>

                <div  class="row mt-auto bd-highlight ml-4">
                  <div class="col-6 text-center items-align-center">
                    <div class="row">
                      <%= link_to  mypage_path, class: "text-decoration-none text-dark" do  %>
                        <% if current_end_user.image.attached? %>
                          <%= image_tag current_end_user.image, size: "40x40", class: "rounded-circle" %>
                        <% end %>
                          <strong><%= current_end_user.display_name %></strong>
                      <% end %>
                    </div>
                  </div>

                  <div class="col-6">
                    <%= link_to "投稿", new_post_path, class: 'btn btn-outline-dark nav-link' %>
                  </div>
                </div>

            <% elsif admin_signed_in? %>
              <ul class="navbar-nav">
                <li class="nav-item ">検索</li>
                <li class="nav-item my-2">
                  <%= link_to "停止ユーザー", admin_end_users_path, class: 'btn btn-outline-dark nav-link'%>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_end_user_session_path, class: 'btn btn-outline-dark nav-link', method: :delete %>
                </li>
              </ul>
            <% else %>
             <ul class="navbar-nav">
                <li class="nav-item my-2">
                  <%= link_to "投稿一覧", root_path, class: 'btn btn-outline-dark nav-link'%>
                </li>
                <li class="nav-item my-2">
                  <%= link_to "ログイン", new_end_user_session_path, class: 'btn btn-outline-dark nav-link' %>
                </li>
                <li class="nav-item my-2">
                  <%= link_to "新規登録", new_end_user_registration_path, class: 'btn btn-outline-dark nav-link' %>
                </li>
              </ul>
            <% end %>

          </nav>
        </div>

      </div>
    </div>

  </body>
</html>
