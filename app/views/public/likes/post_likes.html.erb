<div class="container">
  <%= render 'likes_header', end_user: @end_user %>

  <div class="row mt-2">

    <% @likes.each do |like| %>

      <% if like.end_user.hide_non_cancelled_users %>

        <div class="col-lg-4 col-md-6">

          <div class="card my-md-3 my-1 shadow">

            <%= link_to post_path(like.end_user.display_name, like.table.id), class: "text-decoration-none text-dark"  do %>

              <% if like.table.image.attached? %>

                <div class="card-body h-200 no-height card-body-upper-row">

                  <p class="card-title font-075 overflow-hidden">
                    <i class="fas fa-paper-plane"></i>
                    <%= image_tag like.table.end_user.get_image, size: "25x25" %>
                    <%= like.table.end_user.display_name %>
                  </p>

                  <%= image_tag like.table.image, size: "171x130", class: "timeline-sm-img likes-md-img" %>

                  <p class="card-title"> <%= truncate(like.table.body, length: 18) %></p>

                </div>

                <div class="card-body text-right card-sm-padding">
                  <p class="card-text"><%= like.table.created_at.strftime('%Y.%m.%d') %>  <i class="fas fa-solid fa-heart ml-3 text-danger"></i> <%= like.table.likes.count %></p>
                </div>

              <% else %>

                <div class="card-body h-200 no-height card-body-upper-row">

                  <p class="card-title font-075">
                    <i class="fas fa-paper-plane"></i>
                    <%= image_tag like.table.end_user.get_image, size: "25x25" %>
                    <%= like.table.end_user.display_name %>
                  </p>

                  <p class="card-title"> <%= truncate(like.table.body, length: 70) %></p>

                </div>

                <div class="card-body text-right card-sm-padding">
                  <p class="card-text"> <%= like.table.created_at.strftime('%Y.%m.%d') %> <i class="fas fa-solid fa-heart ml-3 text-danger"></i> <%= like.table.likes.count %></p>
                </div>

              <% end %>

            <% end %>

          </div>

        </div>

      <% end %>

    <% end %>

  </div>

  <div class="row mt-5 d-flex justify-content-center">
    <%= paginate @likes %>
  </div>

</div>

