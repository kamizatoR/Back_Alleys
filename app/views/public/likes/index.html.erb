<div class="container">
  <div class="header border-bottom">
      <div class="row  justify-content-center">
        <div class="col-10 text-center ">
          <h3 class=""><%= @end_user.display_name %> さんのいいねリスト</h3>
        </div>
      </div>

      <div class="row my-2 justify-content-around ">
        <div class="col-3 btn btn-lg bg-info text-light">
          <%= link_to post_likes_path(@end_user.display_name), class: "text-decoration-none text-light" do %>
            <strong>投稿一覧</strong>
          <% end %>
        </div>
        <div class="col-3 btn btn-lg bg-info text-light">
          <%= link_to comment_likes_path(@end_user.display_name), class: "text-decoration-none text-light" do %>
            <strong>コメント一覧</strong>
          <% end %>
        </div>
        <div class="col-3 btn btn-lg bg-info text-light">
          <%= link_to reply_likes_path(@end_user.display_name), class: "text-decoration-none text-dark"  do %>
            <strong>リプライ一覧</strong>
          <% end %>
        </div>
      </div>

    </div>

    <%= render 'likes_index', likes: @end_user.likes %>
</div>