<%= render 'public/errors/error_display', model: @reply %>

<div class="row mt-5 position-sm">
  <div class="col-md-10 px-md-5 px-2 mt-5 justify-content-center text-center">

    <%= form_with model: @reply, url: update_reply_path(@reply.comment.post.end_user.display_name, @reply.comment.post_id, @reply.comment_id, @reply.id), method: :patch do |f| %>
      <div class="row mx-3 mb-md-3 px-md-5 mx-2 mx-md-0 justify-content-around ">
        <%= f.text_area :body, placeholder: "本文", class: "form-control col-md-12"  %>
      </div>

      <div class="row mt-md-3 mb-md-0 mx-2 mx-md-0 my-2 justify-content-around">
        <%= f.submit "変更内容を保存", class: "btn btn-success  col-md-4 btn-small" %>
      </div>
    <% end %>

  </div>

  <div class="col-md-2 pl-0 sm-list">
    <div>
        <%= link_to  destroy_reply_path(@reply.comment.post.end_user.display_name, @reply.comment.post_id, @reply.comment_id, @reply.id), method: :delete, class: "btn btn-outline-danger", "data-confirm"=> "本当に削除しますか？" do %>
          削除 <i class="fas fa-solid fa-trash"></i>
        <% end %>
    </div>
  </div>
  
</div>
