<%= render 'public/errors/error_display', model: @reply %>

<div class="row mt-5">
  <div class="col-10 px-5 mt-5 justify-content-center text-center",>

    <%= form_with model: @reply, url: update_reply_path(@reply.comment.post.end_user.display_name, @reply.comment.post_id, @reply.comment_id, @reply.id), method: :patch do |f| %>
      <div class="row  mb-3  justify-content-around ">
        <%= f.text_area :body, placeholder: "本文", class: "form-control"  %>
      </div>

      <div class="row mt-3 mb-0  justify-content-around ">
        <%= f.submit "変更内容を保存", class: "btn btn-success col-4" %>
      </div>
    <% end %>

  </div>

  <div class="col-2 pl-0">
    <ul class="list-unstyled">
      <li>
        <%= link_to  destroy_reply_path(@reply.comment.post.end_user.display_name, @reply.comment.post_id, @reply.comment_id, @reply.id), method: :delete, class: "btn btn-outline-danger", "data-confirm"=> "本当に削除しますか？" do %>
          削除 <i class="fas fa-solid fa-trash"></i>
        <% end %>
    </ul>
  </div>

</div>
