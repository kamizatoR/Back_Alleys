<div class="container my-4">

  <%= form_with url: search_result_path, method: :get do |f| %>
  
    <div class="row">
      <%= f.label "検索ジャンル", class: "mr-3 pt-2" %>
      <%= f.select :range, options_for_select([['投稿'], ['ユーザー']]) %>
    </div>

    <div class="row mt-2">
      <%= f.text_field :word, class: "form-control col-md-9 col-8" %>
      <%= f.submit "検索", class: "btn btn-success col-md-2 col-3 ml-1" %>
    </div>

  <% end %>
  
</div>