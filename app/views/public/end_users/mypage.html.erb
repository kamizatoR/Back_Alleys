<h3 class="text-center mt-4 mb-1 font-08"><%= current_end_user.display_name %> さんの</h3>
<h3 class="text-center mb-md-4 mb-1 font-08">アカウント情報</h3>

<div class="container mt-md-5 mt-3">

  <% if current_end_user.not_display_guest %>

    <div class="row mb-md-3 justify-content-center">
      <p class="col-md-3 col-6 mr-md-2">会員ID</p>
      <p class="col-md-4 col-6 mr-md-2 text-center">No.<%= current_end_user.id %></p>
    </div>

    <div class="row mb-md-3 justify-content-center">
      <p class="col-md-3 col-12 mr-md-2">表示名</p>
      <p class="col-md-4 col-12 mr-md-2 text-center"><%= current_end_user.display_name %></p>
    </div>

    <div class="row mb-md-3 justify-content-center">
      <p class="col-md-3 col-12 mr-md-2">氏名</p>
      <p class="col-md-4 col-12 mr-md-2 text-center"><%= current_end_user.first_name %>　<%= current_end_user.last_name %></p>
    </div>

    <div class="row mb-md-3 justify-content-center">
      <p class="col-md-3 col-12 mr-md-2">フリガナ</p>
      <p class="col-md-4 col-12 mr-md-2 text-center"><%= current_end_user.first_kana %>　<%= current_end_user.last_kana %></p>
    </div>

    <div class="row mb-md-3 justify-content-center">
      <p class="col-md-3 col-12 mr-md-2">メールアドレス</p>
      <p class="col-md-4 col-12 mr-md-2 text-center"><%= current_end_user.email %></p>
    </div>

    <div class="row mb-3 justify-content-center">
      <%= link_to  edit_mypage_path(current_end_user.display_name), class: 'btn btn-dark nav-link' do %>
        編集 <i class="fas fa-user-edit"></i>
      <% end %>
    </div>

  <% else %>

    <div class="row mb-3 justify-content-center">
      <p class="col-3 mr-2">会員ID</p>
      <p class="col-4 mr-2 text-center">No.<%= current_end_user.id %></p>
    </div>

    <div class="row mb-3 justify-content-center">
      <p class="col-3 mr-2">表示名</p>
      <p class="col-4 mr-2 text-center"><%= current_end_user.display_name %></p>
    </div>

    <div class="row mb-3 justify-content-center">
      <p class="col-3 mr-2">会員ステータス</p>
      <p class="col-4 mr-2 text-success text-center"><strong>ゲスト会員</strong></p>
    </div>

  <% end %>

</div>