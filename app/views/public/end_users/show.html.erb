<div class="container">
  <div class="header">
    <div class="row border-bottom">

      <div class="col-5">
        <div class="row">
          <% if @end_user.image.attached? %>
            <%= image_tag @end_user.image, size: "90x90" %>
          <% end %>

          <h3 class=" d-flex align-items-end mb-0 ml-3"><strong><%= @end_user.display_name %></strong></h3>
        </div>
      </div>

      <div class="col-3 ml-5">
        <nav class="nav nav-bar flex-column">

          <ul class="navbar-nav">

            <li class="nav-item">
              フォロワー
            </li>
            <li class="nav-item my-2">
              フォロー <%= @end_user.followers.count %>
              <% @end_user.followers.each do |following| %>
                <%= following.display_name %>
              <% end %>

            </li>
            <li class="nav-item">
              いいね数
            </li>

        </nav>

      </div>

      <div class="col-3  d-flex align-items-center">
        <% if current_end_user != @end_user %>
          <%= link_to "フォローする", end_user_following_path(@end_user.display_name), method: :post %>
        <% end %>
      </div>

    </div>
  </div>
</div>