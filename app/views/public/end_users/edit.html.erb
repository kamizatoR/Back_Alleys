<h1 class="text-center my-4">情報編集</h1>

  <div class="container mt-5">
    <%= form_with model: @end_user, url: update_mypage_path do |f| %>

      <div class="row mx-4 mb-3 px-5 ">
        <%= f.label  "表示名", class: "col-form-label col-3 mr-1"  %>
        <%= f.text_field :display_name, autofocus: true, class: " ml-3 col-4 form-control"  %>
      </div>

      <div class="row mx-3 mb-3 px-5 justify-content-around ">
        <%= f.label  "名前", class: "col-form-label col-3"  %>
        <%= f.text_field :first_name, placeholder: "性", class: " form-control col-4 "  %>
        <%= f.text_field :last_name, placeholder: "名", class: " form-control col-4"  %>
      </div>

      <div class="row mx-3 mb-3 px-5 justify-content-around ">
        <%= f.label  "フリガナ", class: "col-form-label col-3" %>
        <%= f.text_field :first_kana, placeholder: "セイ", class: "form-control col-4"  %>
        <%= f.text_field :last_kana, placeholder: "メイ", class: "form-control col-4" %>
      </div>

      <div class="row mx-3 mb-3 px-5 justify-content-around ">
        <%= f.label  "メールアドレス", class: "col-form-label col-3" %>
        <%= f.email_field :email, placeholder: "sample@example.com", autocomplete: "email", class: "form-control col-8 mr-3" %>
      </div>

      <div class="row mx-3 mt-5 mb-0 px-5 justify-content-around ">
        <%= f.submit "編集内容を保存", class: "btn btn-success col-4" %>
        <%= link_to "退会する", unsubscribe_path, class: "btn btn-danger col-4"%>
      </div>
    <% end %>

  </div>