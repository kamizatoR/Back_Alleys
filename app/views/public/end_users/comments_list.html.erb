<div class="container">

  <%= render 'timeline_header', end_user: @end_user %>

  <div class="row mt-2">

    <% @end_user_comments.each do |comment| %>

      <% if comment.end_user.hide_non_cancelled_users %>

        <div class="col-lg-4 col-md-6 ">

          <div class="card my-md-3 my-1 shadow">

            <%= link_to comment_path(comment.post.end_user.display_name, comment.post_id, comment.id), class: "text-decoration-none text-dark"  do %>

              <div class="card-body h-200 no-height card-body-upper-row">
                <p class="card-title"> <%= truncate(comment.body, length: 65) %></p>
              </div>

              <div class="card-body text-right card-sm-padding">
                <p class="card-text"><i class="fas fa-solid fa-reply text-secondary"></i> <%= comment.replies.count %> <i class="fas fa-solid fa-heart ml-3 text-danger"></i> <%= comment.likes.count %></p>
              </div>

            <% end %>

          </div>

        </div>

      <% end %>

    <% end %>

  </div>

  <div class="row mt-5 d-flex justify-content-center">
    <%= paginate @end_user_comments %>
  </div>

</div>