<div class="container">
  <%= render 'timeline_header', end_user: @end_user %>

  <div class="row mt-2">

    <% @end_user_comments.each do |comment| %>
      <% if comment.end_user.is_deleted != true %>
      <div class="col-4 h75">
        <div class="card my-3 vh75">

            <%= link_to comment_path(comment.post.end_user.display_name, comment.post_id, comment.id), class: "text-decoration-none text-dark"  do %>
              <div class="card-body h-200 ">
                <p class="card-title"> <%= truncate(comment.body, length: 78) %></p>
              </div>
              <div class="card-body text-right">
                <p class="card-text text-"><i class="fas fa-solid fa-reply"></i> <%= comment.replies.count %> <i class="fas fa-solid fa-heart ml-3"></i> <%= comment.likes.count %></p>
              </div>
            <% end %>

        </div>
      </div>
      <% end %>
    <% end %>

  </div>

  <div class="row mt-5 d-flex justify-content-center">
    <%= paginate @end_user_comments %>
  </div>

</div>