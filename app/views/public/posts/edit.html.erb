<div class="row mt-5">
  <div class="col-10 px-5 mt-5 justify-content-center text-center">

        <%= form_with model: @post, url: update_post_path(current_end_user.display_name, @post.id), method: :patch do |f| %>

          <div class="row mx-3 mb-3 px-5 justify-content-around ">
            <%= f.file_field :image, accept: "image/*" %>
          </div>

          <div class="row mt-3 mb-0  justify-content-around ">
            <%= f.text_area :body, rows:'5', placeholder: "本文", class: "form-control col-12"  %>
          </div>

          <div class="row mx-3 mt-3 mb-0 px-5 justify-content-around ">
            <%= f.submit "投稿", class: "btn btn-success col-4" %>
          </div>
        <% end %>
  </div>


  <div class="col-2 pl-0">
    <ul class="list-unstyled">
      <li>
        <%= link_to  destroy_post_path(current_end_user.display_name, @post.id), method: :delete, class: "btn btn-outline-danger", "data-confirm"=> "本当に削除しますか？" do %>
          削除 <i class="fas fa-solid fa-trash"></i>
        <% end %>
      </li>
    </ul>
  </div>
</div>
