<div class="row mt-5">
  <div class="col-10 d-flex justify-content-center text-center">
    <div class="d-flex align-items-center" style="height:300px;">
      <div>
        <%= form_with model: @post, url: post_path(@post.id),method: :patch do |f| %>

          <div class="row mx-3 mb-3 px-5 justify-content-around ">
            <%= f.file_field :image, accept: "image/*" %>
          </div>

          <div class="row mx-3 mb-3 px-5 justify-content-around ">
            <%= f.text_area :body, placeholder: "本文", class: "form-control col-12"  %>
          </div>

          <div class="row mx-3 mt-3 mb-0 px-5 justify-content-around ">
            <%= f.submit "投稿", class: "btn btn-success col-4" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-2 pl-0">
    <ul class="list-unstyled">
      <li>
        <%= link_to "削除", post_path(@post.id), method: :delete %>
      </li>
    </ul>
  </div>
</div>
