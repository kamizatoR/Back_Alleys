
  <div class="d-flex justify-content-center text-center">
    <div class="d-flex align-items-center" style="height:600px;">
      <div>
        <%= form_with model: @post, url: posts_path do |f| %>

          <div class="row mx-3 mb-3 px-5 justify-content-around ">
            <%= f.file_field :image, accept: "image/*" %>
          </div>

          <div class="row mx-3 mb-3 px-5 justify-content-around ">
            <%= f.text_area :body, placeholder: "本文", class: "form-control col-12"  %>
          </div>

          <div class="row mx-3 mt-3 mb-0 px-5 justify-content-around ">
            <%= f.submit "投稿", class: "btn btn-success col-4" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
