<h2 class="text-center my-4">ログイン</h2>

<%= form_with model: @end_user, url: end_user_session_path do |f| %>

  <div class="row mx-lg-3 mb-lg-3 px-lg-5 justify-content-lg-around">
    <div class="col-form-label col-lg-3 " >
      <%= f.label "メールアドレス" %>
    </div>

    <div class="col-lg-9 ">
      <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="row mx-lg-3 mb-lg-3 px-lg-5 justify-content-lg-around">
    <div class="col-form-label col-lg-3" >
      <%= f.label "パスワード" %>
    </div>
    <div class="col-lg-9 ">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <div class="col-lg-6 my-4 justify-content-center text-center">
      <%= f.submit "ログイン", class: "btn btn-primary w-75" %>
    </div>
  </div>
<% end %>

<div class="row mx-lg-3 mb-lg-0 px-lg-5 justify-content-around">
  <p><strong>新規登録</strong>は<a href="/end_users/sign_up" class="ml-2">こちら</a></p>
</div>

<div class="row mx-lg-3 mb-lg-3 px-lg-5 justify-content-around">
  <p>すぐ利用したい場合は <%= link_to "こちら", end_users_guest_sign_in_path, method: :post %></p>
</div>
